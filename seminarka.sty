% Makro pro vytvoření stránky prohlášení
\newcommand{\declarationpage}[2]{
 \clearpage % Začíná na nové stránce
    %\thispagestyle{empty} % Bez záhlaví/zápatí
    \pagenumbering{Roman}
    \null % Prázdný prvek pro začátek
    \vfill % Vertikální vyplnění horní části
    \begin{center}
        {\Large\bfseries Prohlášení} % Velký tučný nadpis
        \par % Odstavec
        \vspace{1.5cm} % Menší pevná mezera
        \parbox{0.8\textwidth}{
            #1 % Vlastní text prohlášení
        }
        \vspace{1cm} % Menší pevná mezera
        \par % Odstavec
        #2 % Místo a datum
    \end{center}
    \vfill % Vertikální vyplnění dolní části
    \clearpage % Přechod na novou stránku
}
